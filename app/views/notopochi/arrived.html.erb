<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<%= javascript_tag do %>
    window.arrivedPoints = <%= @arrivedPoints %>;
    window.arrivedNames = <%= raw @arrivedNames %>;
    window.fuga = '<%= j params[:fuga] || "デフォルト値" %>';
<% end %>
<article id="page-arrived-content" >
	<p id="description">使用した交通手段で移動した結果の地図を表示します</p>
    <div id="map_canvas" style="width:100%; height:300px" ></div>
	<p id="description">上の地図をfacebookでシェアするときに押してください</p>
	<%= form_tag( { controller: :notopochi, action: :depart}) do %>
		<%= button_tag('facebookでシェアする') %>
	<% end %>
	<br>
	<br>
	<p id="description">最初からやり直したいときに押してください。</p>
	<%= form_tag( { controller: :notopochi, action: :depart}) do %>
		<%= button_tag('やり直す') %>
	<% end %>
</article>