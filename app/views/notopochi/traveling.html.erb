<article id="page-traveling-content">
	<legend>ボタンを押してください。</legend>
	<%= form_tag( { controller: :notopochi, action: :getoff}, id: :formtravelinggetoff, class: :getoff, method: :post) do %>
		<%= button_tag('バス', id: :'btn_getoff', type: :'button', name: :'vehicle', value: :'bus') %>
		<%= button_tag('電車', id: :'btn_getoff', type: :'button', name: :'vehicle', value: :'train') %>
		<%= button_tag('タクシー', id: :'btn_getoff', type: :'button', name: :'vehicle', value: :'taxi') %>
	<% end %>
	<br>
	<br>
	<%= form_tag( { controller: :notopochi, action: :arrive}, id: :formtravelingarrive, class: :arrive, method: :post) do %>
		<%= button_tag('目的地についた', id: :'btn_arrive', name: :'btn', value: :'arrive') %>
	<% end %>
	<br>
	<br>
	<%= form_tag( { controller: :notopochi, action: :departure}, id: :formtravelingdeparture, class: :departure, method: :post) do %>
		<%= button_tag('やり直す', name: :'btn', value: :'departure') %>
	<% end %>
	<br>
</article>
