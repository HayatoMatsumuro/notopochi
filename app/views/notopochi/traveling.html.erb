<body style="background-image: url(<%= asset_path 'back.jpg' %>);">
<div id="div_back">
	<div id="div_logout">
		<%= form_tag( { controller: :notopochi, action: :login}, id: :loginout, method: :get) do %>
			<%= button_tag( 'ログアウト', id: :'btn_logout', type: :'submit') %>
		<% end %>
	</div>
	<div id="div_img_notopochi">
		<%= image_tag('notopochi.png', id: "img_notopochi") %>
	</div>
	<div id="div_img_notobus">
		<%= image_tag('notobus.png', id: "img_notobus") %>
	</div>
	<div id="descriptionBox">
		<% if @userName == "" %>
		<b>ゲスト</b> さんは、<br>
		<% else %>
		<b><%= @userName %></b> さんは、<br>
		<% end %>
		能登を旅行中です！<br>
		<br>
		旅行中の要所に着いたら利用した移動手段のボタンを選んで押してください
	</div>
	<%= form_tag( { controller: :notopochi, action: :getoff}, id: :formtravelinggetoff, class: :getoff, method: :post) do %>
		<input type="hidden" id="hidden_getoff_time" name="time" value="" />
		<input type="hidden" id="hidden_getoff_latitude" name="latitude" value="" />
		<input type="hidden" id="hidden_getoff_longitude" name="longitude" value="" />
		<input type="hidden" id="hidden_getoff_vehicle" name="vehicle" value="" />
		<div id="div_btn_getoff"><%= button_tag('バス', id: :'btn_getoff_bus', type: :'button', name: :'vehicle', value: :'bus', style: :"color:#5C4033; background-color:#FF99CC; width:100%;")  %></div>
		<div id="div_btn_getoff"><%= button_tag('徒歩', id: :'btn_getoff_walk', type: :'button', name: :'vehicle', value: :'walk', style: :"color:#5C4033; background-color:#FFCC99; width:100%;") %></div>
		<div id="div_btn_getoff"><%= button_tag('電車', id: :'btn_getoff_train', type: :'button', name: :'vehicle', value: :'train', style: :"color:#5C4033; background-color:#B0D0E6; width:100%;") %></div>
		<div id="div_btn_getoff"><%= button_tag('タクシー', id: :'btn_getoff_taxi', type: :'button', name: :'vehicle', value: :'taxi', style: :"color:#5C4033; background-color:#99FF99; width:100%;") %></div>
	<% end %>
	<br>
	<br>
	<div id="descriptionBox">旅行の最終目的地に着いたら、「目的地に着いた」を押してください。</div>
	<div id="div_btn_arrive">
	<%= form_tag( { controller: :notopochi, action: :arrive}, id: :formtravelingarrive, class: :arrive, method: :post) do %>
		<input type="hidden" id="hidden_arrive_time" name="time" value="" />
		<input type="hidden" id="hidden_arrive_latitude" name="latitude" value="" />
		<input type="hidden" id="hidden_arrive_longitude" name="longitude" value="" />
		<%= button_tag('目的地に着いた', id: :'btn_arrive', type: :'button') %>
	<% end %>
	</div>
	<br>
	<br>
	<div id="descriptionBox">旅行をやめるとき、または最初からやり直したいときに押してください。</div>
	<div id="div_btn_next">
	<%= form_tag( { controller: :notopochi, action: :departure}, id: :formtravelingdeparture, class: :departure, method: :post) do %>
		<%= button_tag('やり直す', id: :'btn_next', name: :'btn', value: :'departure') %>
	<% end %>
	</div>
	<br>
</div>
</body>
