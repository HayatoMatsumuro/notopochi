<% url_getoff = 'http://localhost:3000/notopochi/getoff' # TODO:暫定値 %>
<% url_arrive = 'http://localhost:3000/notopochi/arrive' # TODO:暫定値 %>
<% url_departure = 'http://localhost:3030/notopochi/departure' # TODO:暫定値 %>

<article id="page-traveling-content">
	<legend>ボタンを押してください。</legend>
	<%= form_tag( { controller: :notopochi, action: :getoff}, id: :formtravelinggetoff, class: :getoff, method: :post) do %>
		<%= button_tag('バス', name: :'btn', value: :'bus') %>
		<%= button_tag('電車', name: :'btn', value: :'train') %>
		<%= button_tag('タクシー', name: :'btn', value: :'taxi') %>
	<% end %>
	<br>
	<br>
	<form id="form-traveling-arrive" action="<%= url_arrive %>">
		<fieldset>
			<button type="submit" name="btn" value="arrive">目的地に着いた</button>
		</filedset>
	</form>
	<br>
	<br>
	<form id="form-traveling-arrive" action="<%= url_departure %>">
		<fieldset>
			<button type="submit" name="btn" value="departure">やり直す</button>
		</filedset>
	</form>
</article>